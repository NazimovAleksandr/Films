<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_film_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toStartOf="@id/image_film_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/image_1" />

        <TextView
            android:id="@+id/name_film_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Форсаж"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/image_film_1"
            app:layout_constraintStart_toStartOf="@id/image_film_1"
            app:layout_constraintTop_toBottomOf="@id/image_film_1" />

        <Button
            android:id="@+id/details_film_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Детали"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/image_film_1"
            app:layout_constraintStart_toStartOf="@id/image_film_1"
            app:layout_constraintTop_toBottomOf="@id/name_film_1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_film_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toStartOf="@id/image_film_3"
            app:layout_constraintStart_toEndOf="@id/image_film_1"
            app:layout_constraintTop_toTopOf="@id/image_film_1"
            app:srcCompat="@drawable/image_2" />

        <TextView
            android:id="@+id/name_film_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Форсаж 2"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/image_film_2"
            app:layout_constraintStart_toStartOf="@id/image_film_2"
            app:layout_constraintTop_toBottomOf="@id/image_film_2" />

        <Button
            android:id="@+id/details_film_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Детали"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/image_film_2"
            app:layout_constraintStart_toStartOf="@id/image_film_2"
            app:layout_constraintTop_toBottomOf="@id/name_film_2" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_film_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_film_2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/image_3" />

        <TextView
            android:id="@+id/name_film_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Форсаж 3"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/image_film_3"
            app:layout_constraintStart_toStartOf="@id/image_film_3"
            app:layout_constraintTop_toBottomOf="@id/image_film_3" />

        <Button
            android:id="@+id/details_film_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Детали"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/image_film_3"
            app:layout_constraintStart_toStartOf="@id/image_film_3"
            app:layout_constraintTop_toBottomOf="@id/name_film_3" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_film_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@id/image_film_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_film_1"
            app:srcCompat="@drawable/image_4" />

        <TextView
            android:id="@+id/name_film_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Форсаж 4"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/image_film_4"
            app:layout_constraintStart_toStartOf="@id/image_film_4"
            app:layout_constraintTop_toBottomOf="@id/image_film_4" />

        <Button
            android:id="@+id/details_film_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Детали"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/image_film_4"
            app:layout_constraintStart_toStartOf="@id/image_film_4"
            app:layout_constraintTop_toBottomOf="@id/name_film_4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>